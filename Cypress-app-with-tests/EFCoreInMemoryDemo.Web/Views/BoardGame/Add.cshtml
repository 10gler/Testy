@model EFCoreInMemoryDemo.Web.Models.BoardGame

@{
    ViewData["Title"] = "Add";
}



<h2>Add</h2>

<h4>Board Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublishingCompany" class="control-label"></label>
                <input asp-for="PublishingCompany" class="form-control" />
                <span asp-validation-for="PublishingCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinPlayers" class="control-label"></label>
                <input asp-for="MinPlayers" class="form-control" />
                <span asp-validation-for="MinPlayers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxPlayers" class="control-label"></label>
                <input asp-for="MaxPlayers" class="form-control" />
                <span asp-validation-for="MaxPlayers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DifficultyLevel" class="control-label"></label>
                <select asp-for="DifficultyLevel" class="form-group" >
                    @foreach(var level in Html.GetEnumSelectList<ERank>())
                        {
                            <option value="@level.Text">@level.Text</option>
                        }
                </select>   
            </div>
            <div class="form-group">
                <label asp-for="IsReleased" class="control-label"></label>
                <input asp-for="IsReleased" onclick="hide()" id="IsReleased"/>
            </div>
            <div class="form-group" style="display:none" id="ReleaseDateInput">
                <label asp-for="ReleaseDate" class="control-label"></label>
                <input asp-for="ReleaseDate" id="ReleaseDate"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


<script>
function hide() {
    var checkBox = document.getElementById("IsReleased");
    var text = document.getElementById("ReleaseDateInput");

    if (checkBox.checked == true) {
        text.style.display = "block";
    } else {
        text.style.display = "none";
    }
}
</script>