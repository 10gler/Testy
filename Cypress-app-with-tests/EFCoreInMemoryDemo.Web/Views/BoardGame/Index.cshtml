@model IEnumerable<EFCoreInMemoryDemo.Web.Models.BoardGame>

@{
    ViewData["Title"] = "Index";
}

<h2>Games</h2>

<p>
    <a data-test="create-game" asp-action="Add">Create New</a>
</p>
<table data-testing="table" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublishingCompany)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinPlayers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxPlayers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsReleased)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishingCompany)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinPlayers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxPlayers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsReleased)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID" data-testing="open-game">Open</a>
                <form asp-action="Delete" data-testing="delete-game">
                    <input type="hidden" value="@item.ID" name="id" />
                    <input type="submit" value="Delete" />
                </form>
                
            </td>
        </tr>
}
    </tbody>
</table>
